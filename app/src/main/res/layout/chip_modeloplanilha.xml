<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="24dp"
    android:layout_marginLeft="2dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chip_modeloplanilha_selector"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Ícone da pastinha -->
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pastacheia"
            android:layout_marginEnd="16dp" />

        <!-- Textos à esquerda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_nome_planilha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planilha 2"
                android:textColor="#343565"
                android:textStyle="bold"
                android:fontFamily="@font/monda"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_atualizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atualizada há 16h"
                android:textColor="#5F6570"
                android:fontFamily="@font/monda"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Quantidade de registros -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51.5dp"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_qtd_registros"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/monda"
                android:text="500"
                android:layout_marginRight="7dp"
                android:textColor="#2D3FB1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="registros"
                android:textColor="#343565"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>